<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".DetailsActivity">


    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="商品详情"
            android:textColor="#5E5C5C"
            android:textSize="18sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/shop_pic_detail"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/title"
        android:src="@mipmap/search"/>
    <TextView
        android:id="@+id/detail_shop"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="商品名称："
        android:textSize="17sp"
        android:paddingStart="15dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:layout_below="@+id/shop_pic_detail"/>
    <TextView
        android:id="@+id/detail_shop_name"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="0"
        android:textSize="17sp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/detail_shop"
        android:layout_below="@+id/shop_pic_detail"/>

    <TextView
        android:id="@+id/detail_shop1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="商品价格："
        android:textSize="17sp"
        android:paddingStart="15dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:layout_below="@+id/detail_shop"/>
    <TextView
        android:id="@+id/detail_shop_price"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="0"
        android:textSize="17sp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/detail_shop1"
        android:layout_below="@+id/detail_shop_name"/>

    <TextView
        android:id="@+id/detail_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="@color/black"
        android:textSize="17sp" />

</RelativeLayout>